<div>
  <a name="order"></a>
  {{> form}}
</div>
{{/unless}}

<div class="ourContacts">

  <div class="ourContacts-text">
    <p>Салон часов ручной работы "WIRA WATCH"</p>
    <p>{{contacts.adress}}</p>
    <p>Наш <a href="{{host}}/api/">API</a></p>
    <div class="social">
      <div class="instagram">
        <a href="https://www.instagram.com/{{contacts.inst}}" target="_blank">
          <i class="fa fa-instagram fa-2x"></i>
        </a>
      </div>
      <div class="telegram">
        <a href="https://www.t.me/{{contacts.tlg}}" target="_blank">
          <i class="fa fa-paper-plane fa-2x"></i>
        </a>
      </div>
      <div class="whatsapp">
        <a href="https://www.wa.me/{{contacts.wa}}" target="_blank">
          <i class="fa fa-whatsapp fa-2x"></i>
        </a>
      </div>
    </div>
  </div>
  <div id="map-test" class="map"></div>
</div>

