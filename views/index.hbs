<div class="wrapper">
  <header class="header">
    {{> header}}
  </header>
  <div class="main-page">
    {{> mainPage}}
  </div>
  {{#unless adminId}}
  <div>
    <div class="main-order">
      <a href="#order">получить консультацию</a>
    </div>
  </div>
  {{/unless}}
  <a name="models"></a>
  <div class="model-order-main">
    <div class="model-signed">
      <p>Модели</p>
    </div>
    {{#if adminId}}
    <div id="modelDiv" class="modelDiv-admin">
      {{#each allModels}}
      <div data-watch class="model-signed">
        <img class="watchImg" src="{{img}}" alt="watch">
        <h4>{{model_name}}</h4>
        <button data-danger={{id}} type="button" class="btn-danger btn">Удалить</button>
      </div>
      {{/each}}
    </div>

    {{else}}
    <div id="modelDiv" class="modelDiv">
      <div class="swiper">
        <div class="swiper-wrapper">
          {{#each allModels}}
          <div data-watch class="swiper-slide">
            <img class="watchImg" src="{{img}}" alt="watch">
            <h4>{{model_name}}</h4>
          </div>
          {{/each}}
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>
    {{/if}}
  </div> {{!-- <div id="modelDiv" class="modelDiv-admin">
    {{#each allModels}}
    <div data-watch class="watch-card">
      <img class="watchImgAdmin" src="{{img}}" alt="watch">
      <h4>{{model_name}}</h4>
      <button data-danger={{id}} type="button" class="btn-danger btn">Удалить</button>
    </div>
    {{/each}}
  </div> --}}

</div>

